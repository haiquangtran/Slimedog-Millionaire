package game;

/**
 * A sign is an object on the map that displays text when interacted with.
 * 
 */
public class Sign extends EnvironmentObject {

	private static final long serialVersionUID = 1517948236574968486L;

	/**
	 * Creates a new sign with the given image, name and text
	 * 
	 * @param image
	 *            Sign Image
	 * @param name
	 *            Sign Name
	 * @param text
	 *            Sign Text
	 */
	public Sign(String image, String name, String text) {
		super(image, name);
	}

}
